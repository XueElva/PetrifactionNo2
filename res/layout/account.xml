<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f7f7f7"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="#E3393C"
        android:paddingTop="2dip" >

        <ImageButton
            android:id="@+id/back"
            android:layout_marginLeft="10dip"
            android:scaleType="centerInside"
            android:layout_width="35dip"
            android:layout_centerVertical="true"
            android:layout_height="35dip"
            android:background="@drawable/backtbtn" >
        </ImageButton>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="账户信息"
            android:textColor="#ffffff"
            android:textSize="22sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/top"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="15dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dip"
                        android:background="#eaeaea" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff" >

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="100dip"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="6dip"
                            android:paddingBottom="15dip"
                            android:paddingLeft="10dip"
                            android:paddingTop="15dip"
                            android:text="企业名称"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/qiyemingcheng"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="10dip"
                            android:layout_toRightOf="@+id/name"
                            android:background="@drawable/dwj"
                            android:padding="4dip"
                            android:textSize="17sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dip"
                        android:background="#eaeaea" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dip"
                        android:background="#eaeaea" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff" >

                        <TextView
                            android:id="@+id/name1"
                            android:layout_width="100dip"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="6dip"
                            android:paddingBottom="15dip"
                            android:paddingLeft="10dip"
                            android:paddingTop="15dip"
                            android:text="联系人姓名"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/lianxirenxingming"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="10dip"
                            android:layout_toRightOf="@+id/name1"
                            android:background="@drawable/dwj"
                            android:padding="4dip"
                            android:textSize="17sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dip"
                        android:background="#eaeaea" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dip"
                        android:background="#eaeaea" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff" >

                        <TextView
                            android:id="@+id/name3"
                            android:layout_width="100dip"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="6dip"
                            android:paddingBottom="15dip"
                            android:paddingLeft="10dip"
                            android:paddingTop="15dip"
                            android:text="座机"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/quhao"
                            android:layout_width="60dip"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="10dip"
                            android:layout_toRightOf="@+id/name3"
                            android:background="@drawable/dwj"
                            android:padding="4dip"
                            android:textSize="17sp" />

                        <EditText
                            android:id="@+id/zuoji"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="10dip"
                            android:layout_toRightOf="@+id/quhao"
                            android:background="@drawable/dwj"
                            android:padding="4dip"
                            android:textSize="17sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dip"
                        android:background="#eaeaea" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dip"
                        android:background="#eaeaea" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff" >

                        <TextView
                            android:id="@+id/name4"
                            android:layout_width="100dip"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="6dip"
                            android:paddingBottom="15dip"
                            android:paddingLeft="10dip"
                            android:paddingTop="15dip"
                            android:text="手机"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/shouji"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="10dip"
                            android:layout_toRightOf="@+id/name4"
                            android:background="@drawable/dwj"
                            android:padding="4dip"
                            android:textSize="17sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dip"
                        android:background="#eaeaea" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dip"
                        android:background="#eaeaea" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff" >

                        <TextView
                            android:id="@+id/name5"
                            android:layout_width="100dip"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="6dip"
                            android:paddingBottom="15dip"
                            android:paddingLeft="10dip"
                            android:paddingTop="15dip"
                            android:text="企业类型"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                        <Spinner
                            android:id="@+id/qiyeleixing"
                            android:layout_width="fill_parent"
                            android:layout_height="40dip"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="10dip"
                            android:layout_toRightOf="@+id/name5"
                            android:background="@drawable/dwj"
                            android:padding="4dip"
                            android:textSize="17sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dip"
                        android:background="#eaeaea" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dip"
                    android:src="@drawable/accountbtn" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>