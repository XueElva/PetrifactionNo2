<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="#E3393C"
        android:paddingTop="2dip" >

        <ImageButton
            android:id="@+id/back"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/backtbtn"
            android:scaleType="centerInside" >
        </ImageButton>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/shanchu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:text="删除"
            android:textColor="#f7f7f7"
            android:textSize="20sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/top"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="15dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:layout_marginLeft="10dip"
                    android:text="商品信息"
                    android:textColor="#E3393C"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/offerOrDemand"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dip"
                        android:background="#eaeaea" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff" >

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="100dip"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="6dip"
                            android:gravity="right"
                            android:paddingBottom="15dip"
                            android:paddingLeft="10dip"
                            android:paddingTop="15dip"
                            android:text="供求"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/name"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/tigong"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dip"
                                android:layout_marginRight="10dip"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:paddingBottom="8dip"
                                android:paddingTop="8dip"
                                android:text="供应"
                                android:textColor="#E3393C"
                                android:textSize="17sp" />

                            <TextView
                                android:id="@+id/xuqiu"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dip"
                                android:layout_marginRight="10dip"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:paddingBottom="8dip"
                                android:paddingTop="8dip"
                                android:text="求购"
                                android:textColor="#9f000000"
                                android:textSize="17sp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dip"
                        android:background="#eaeaea" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dip"
                        android:background="#eaeaea" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff" >

                        <TextView
                            android:id="@+id/name0"
                            android:layout_width="100dip"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="6dip"
                            android:gravity="right"
                            android:paddingBottom="15dip"
                            android:paddingLeft="10dip"
                            android:paddingTop="15dip"
                            android:text="产品名称"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/chanpinmingcheng"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="10dip"
                            android:layout_toRightOf="@+id/name0"
                            android:background="@drawable/dwj"
                            android:editable="false"
                            android:hint="请输入产品名称"
                            android:padding="4dip"
                            android:textSize="17sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dip"
                        android:background="#eaeaea" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dip"
                        android:background="#eaeaea" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff" >

                        <TextView
                            android:id="@+id/name1"
                            android:layout_width="100dip"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="6dip"
                            android:gravity="right"
                            android:paddingBottom="15dip"
                            android:paddingLeft="10dip"
                            android:paddingTop="15dip"
                            android:text="销售半径"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/xiaoshoubanjing"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="10dip"
                            android:layout_toRightOf="@+id/name1"
                            android:background="@drawable/dwj"
                            android:padding="4dip"
                            android:textSize="17sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dip"
                        android:background="#eaeaea" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dip"
                        android:background="#eaeaea" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff" >

                        <TextView
                            android:id="@+id/name3"
                            android:layout_width="100dip"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="6dip"
                            android:gravity="right"
                            android:paddingBottom="15dip"
                            android:paddingLeft="10dip"
                            android:paddingTop="15dip"
                            android:text="产品规格"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/chanpinguige"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="10dip"
                            android:layout_toRightOf="@+id/name3"
                            android:background="@drawable/dwj"
                            android:padding="4dip"
                            android:textSize="17sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dip"
                        android:background="#eaeaea" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll33"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dip"
                        android:background="#eaeaea" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff" >

                        <TextView
                            android:id="@+id/name33"
                            android:layout_width="100dip"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="6dip"
                            android:gravity="right"
                            android:paddingBottom="15dip"
                            android:paddingLeft="10dip"
                            android:paddingTop="15dip"
                            android:text="厂家"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/producer"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="10dip"
                            android:layout_toRightOf="@+id/name33"
                            android:background="@drawable/dwj"
                            android:padding="4dip"
                            android:textSize="17sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dip"
                        android:background="#eaeaea" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dip"
                        android:background="#eaeaea" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff" >

                        <TextView
                            android:id="@+id/name4"
                            android:layout_width="100dip"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="6dip"
                            android:gravity="right"
                            android:paddingBottom="15dip"
                            android:paddingLeft="10dip"
                            android:paddingTop="15dip"
                            android:text="价格"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/name4"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <EditText
                                android:id="@+id/price"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dip"
                                android:layout_weight="1"
                                android:background="@drawable/dwj"
                                android:inputType="numberDecimal"
                                android:padding="4dip"
                                android:textSize="17sp" />

                            <Spinner
                                android:id="@+id/huobi"
                                android:layout_width="0dip"
                                android:layout_height="40dip"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dip"
                                android:layout_marginRight="10dip"
                                android:layout_weight="1"
                                android:background="@drawable/dwj"
                                android:padding="4dip"
                                android:textSize="17sp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dip"
                        android:background="#eaeaea" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dip"
                        android:background="#eaeaea" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff" >

                        <TextView
                            android:id="@+id/name5"
                            android:layout_width="100dip"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="6dip"
                            android:gravity="right"
                            android:paddingBottom="15dip"
                            android:paddingLeft="10dip"
                            android:paddingTop="15dip"
                            android:text="数量"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/name5"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <EditText
                                android:id="@+id/shuliang"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dip"
                                android:layout_weight="1"
                                android:background="@drawable/dwj"
                                android:inputType="number"
                                android:padding="4dip"
                                android:textSize="17sp" />

                            <Spinner
                                android:id="@+id/danwei"
                                android:layout_width="0dip"
                                android:layout_height="40dip"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dip"
                                android:layout_marginRight="10dip"
                                android:layout_weight="1"
                                android:background="@drawable/dwj"
                                android:inputType="number"
                                android:padding="4dip"
                                android:textSize="17sp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dip"
                        android:background="#eaeaea" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dip"
                        android:background="#eaeaea" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff" >

                        <TextView
                            android:id="@+id/name6"
                            android:layout_width="100dip"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="6dip"
                            android:gravity="right"
                            android:paddingBottom="15dip"
                            android:paddingLeft="10dip"
                            android:paddingTop="15dip"
                            android:text="联系人"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/lianxiren"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="10dip"
                            android:layout_toRightOf="@+id/name6"
                            android:background="@drawable/dwj"
                            android:editable="false"
                            android:hint="请输入联系人"
                            android:padding="4dip"
                            android:textSize="17sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dip"
                        android:background="#eaeaea" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll8"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dip"
                        android:background="#eaeaea" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff" >

                        <TextView
                            android:id="@+id/name8"
                            android:layout_width="100dip"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="6dip"
                            android:gravity="right"
                            android:paddingBottom="15dip"
                            android:paddingLeft="10dip"
                            android:paddingTop="15dip"
                            android:text="手机"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/shoujied"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="10dip"
                            android:layout_toRightOf="@+id/name8"
                            android:background="@drawable/dwj"
                            android:inputType="number"
                            android:padding="4dip"
                            android:textSize="17sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dip"
                        android:background="#eaeaea" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll7"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dip"
                        android:background="#eaeaea" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff" >

                        <TextView
                            android:id="@+id/name7"
                            android:layout_width="100dip"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="6dip"
                            android:gravity="right"
                            android:paddingBottom="15dip"
                            android:paddingLeft="10dip"
                            android:paddingTop="15dip"
                            android:text="座机"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/quhao"
                            android:layout_width="60dip"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="10dip"
                            android:layout_toRightOf="@+id/name7"
                            android:background="@drawable/dwj"
                            android:inputType="number"
                            android:padding="4dip"
                            android:textSize="17sp" />

                        <EditText
                            android:id="@+id/zuoji"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="10dip"
                            android:layout_toRightOf="@+id/quhao"
                            android:background="@drawable/dwj"
                            android:inputType="number"
                            android:padding="4dip"
                            android:textSize="17sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dip"
                        android:background="#eaeaea" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/save"
                    android:layout_width="300dip"
                    android:layout_height="45dip"
                    android:layout_marginTop="15dip"
                    android:src="@drawable/accountbtn" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>